<% include partials/_header %>

<div class="container">

  <div class="row">

    <div class="col-xl-12 mb-4">
      <div class="card">
        <div class="card-body">
          <form action="/add" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="nombre" placeholder="Nombre">
            </div>
            <div class="form-group">
              <input class="form-control" name="correo" type="email"
                placeholder="correo"
                />
            </div>
            <div class="form-group">
              <input class="form-control" type="text" name="password" placeholder="Contraseña">
            </div>
            <div class="form-group">
              <select class="custom-select" name="rol">
                <option selected>Seleccionar Rol</option>
                <option value="Administrador">Administrador</option>
                <option value="Moderador">Moderador</option>

              </select>
            </div>
            
            <div class="form-group text-center">
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" value="true" id="defaultCheck1" name="estado">
                <label class="form-check-label" for="defaultCheck1">
                  Estado
                </label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" value="true" id="defaultCheck2" name="google">
                <label class="form-check-label" for="defaultCheck2">
                  Google
                </label>
              </div>
            </div>

            <div class="text-center">
              <button class="btn btn-primary" type="submit">
                Añadir
              </button>
            </div>
            
          </form>
        </div>
      </div>
    </div>
    <br/><br/><br/><br/><br/><br/><br/><br/>
    <div class="col-xl-12">
      <table class="table table-bordered table-hover text-center">
        <thead>
          <tr>
            <th>N°</th>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Estado</th>
            <th>Rol</th>
            <th>Google</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i=0; i < tasks.length; i++) { %>
            <tr>
              <td><%= i + 1%></td>
              <td><%= tasks[i].nombre %></td>
              <td><%= tasks[i].correo %></td>
              <td><%= tasks[i].rol %></td>
              <td><%= tasks[i].estado %></td>
              <td><%= tasks[i].google %></td>
            </tr>
          <% } %>
        </tbody>
      </table>

    </div>
    <!--FORM-->


    <!-- LIST -->

  </div>

</div>

